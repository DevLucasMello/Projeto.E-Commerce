@model PcSantos.Domain.ClienteLoginViewModel

@{
    ViewBag.Title = "Login";
}

<h3>Login</h3>


<form method="post">
    <div class="form-horizontal">


        <div id="mensagem">@Model.Mensagem</div>
        
        <div class="form-group">
            <label class="control-label" for="Email">Email:</label>
            <input value="@Model.Email" class="form-control" type="text" name="Email" id="Email" />
        </div>

        <div class="form-group">
            <label class="control-label" for="Senha">Senha:</label>
            <input value="@Model.Senha" class="form-control" type="password" name="Senha" id="Senha" />
        </div>

        <div class="form-group">
            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-check"></span> Entrar</button>
        </div>

    </div>
</form>

<div>
    @Html.ActionLink("Não possui Login? Registre-se", "Registro")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}